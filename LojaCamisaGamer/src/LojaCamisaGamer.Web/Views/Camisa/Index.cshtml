@model IEnumerable<LojaCamisaGamer.Application.ViewModels.CamisaViewModel>

@{
    ViewData["Title"] = "Camisas Gamer";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-shop"></i> Camisas Gamer</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nova Camisa
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" id="searchInput" class="form-control" placeholder="Buscar camisas...">
            </div>
        </div>
    </div>

    <div id="camisasContainer">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(item.ImagemUrl))
                        {
                            <img src="@item.ImagemUrl" class="card-img-top" alt="@item.Nome" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image text-white" style="font-size: 3rem;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@item.Nome</h5>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-tag"></i> @item.CategoriaNome
                            </p>
                            <p class="card-text text-muted small">@item.Descricao.Substring(0, Math.Min(100, item.Descricao.Length))...</p>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h4 class="text-success mb-0">@item.Preco.ToString("C")</h4>
                                <span class="badge bg-info">@item.Tamanho</span>
                            </div>
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-palette"></i> @item.Cor
                                </small>
                            </div>
                            <div class="mb-2">
                                <span class="badge @(item.Disponivel ? "bg-success" : "bg-danger")">
                                    @(item.Disponivel ? "Disponível" : "Indisponível")
                                </span>
                                <span class="badge bg-secondary">Estoque: @item.Estoque</span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/busca-camisa.js"></script>
}